@code {
    [Parameter]
    public bool IsVisible { get; set; }
}

@if (IsVisible)
{
        <div class="overlay"></div>
}

<style>
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Black with 50% opacity */
        z-index: 9999; /* Ensure it's above other content */
    }
</style>
